        Color:
            rgba:0.05,0.05,0.05,1
        Rectangle:
            pos:self.pos
            size:self.size
            
        Color:
            rgba:0.1,0.1,0.1,1
        RoundedRectangle:<Loginscreen>:
    canvas:
        Color:
            rgba:0.05,0.05,0.05,1
        Rectangle:
            pos:self.pos
            size:self.size
            
            size:(root.width-10, root.height-10)
            pos:(5,5)
